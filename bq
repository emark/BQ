#!/usr/bin/env perl
use strict;
use lib "/home/hosting_locumtest/usr/local/lib/perl5";
use Mojolicious::Lite;

get '/' => sub {
  my $self = shift;
  $self->render('index');
};

get '/getbonus'=>sub{
  my $self=shift;
  my $url=$self->param('url');
  $self->stash(url=>$url);
  $self->render('getbonus');
};

post '/balance'=>sub{
  my $self=shift;
  my $email=$self->param('email');
  $self->stash(email=>$email);
  $self->render('balance');
};

app->start;
