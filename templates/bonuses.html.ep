%layout 'default', title 'Дарим бонусы за ваше мнение BonusQuest';
<div id=subhead>
    <span class=sublogo><a href="/" style="color:#FFF;text-decoration:none;">BonusQuest</a></span>
</div><!--head-->
<div id=content>
    <div id="quizform">
        <div id=pagecard>
            <H2>Отвечай на вопросы и получай бонусы</H2>
            <table width=100% border=0>
                <tr style="font-style:italic">
                    <td>
                        Бонусодаритель
                    </td>
                    <td>
                        Адрес
                    </td>
                    <td>
                        Описание
                    </td>
                    <td align=center>
                        Получить бонус
                    </td>
                </tr>
            %foreach my $shopid(keys %{$shop}){
                <tr>
                    <td>
                        <%=$shop->{$shopid}{'NAME'}%>
                    </td>
                    <td>
                        <%=link_to "http://$shop->{$shopid}{'URL'}"=>"http://$shop->{$shopid}{'URL'}"=>(target=>'blank',title=>'Переход на сайт')%>
                    </td>
                    <td>
                        <%=$shop->{$shopid}{'DESCRIPTION'}%>
                    </td>
                    <td align=center>
                        %if(!$shop->{$shopid}{'QUIZ'} || $shop->{$shopid}{'QUIZ'}==0){
                            <img src="/media/icon/bstar.png" border=0 title='Бонусы закончились'>
                        %}else{
                            <a href="<%=url_for "/q$shop->{$shopid}{'ID'}.html"%>"><img src="/media/icon/gstar.png" border=0 title='Получить бонус за ответы' class=changebg></a>
                        %}
                    </td>
                </tr>
            %}
            </table>
            <P align=center>
                <a href="/forbusiness.html" class=myButton>Стать партнёром</a>
            </P>
        </div><!--pagecard-->
    </div><!--quizform-->
</div><!--content-->