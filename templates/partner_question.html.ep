%layout 'dashboard',title 'Список вопросов';
<div id=content>
    <div id="quizform">
        <div id=pagecard>
            <%=tag 'H2'=>'Редактирование вопросов'%>
%my @qtype=('Текст','Выбор','Множество','Строка');
<%=form_for '/quiz.html'=>(method=>'post')=>begin%>
<table border=0 width=100%>
  <tr style="font-style: italic">
    <td>
      Тип вопроса
    </td>
    <td colspan=1>
      Содержание вопроса
    </td></tr>
%foreach my $questionid(keys %{$question}){
  <tr>
    <td>
      <select name='type' class=formstyle>
      %my $n=0;
      %foreach my $key (@qtype){
        <option value="<%=$n%>"
        %if($question->{$questionid}{'TYPE'}==$n){
            selected
        %}
        ><%=$key%>
      %$n++}
    </td>
    <td colspan=1>
      <%=text_field 'content'=>"$question->{$questionid}{'CONTENT'}"=>(size=>40,class=>'formstyle')%>
    </td>
  </tr>
  <tr style="font-style: italic">
    <!--<td></td>-->
    <td colspan=2>
    Варианты ответов
    </td>
  </tr>
  <tr>
    <!--<td></td>-->
    <td colspan=2>
      %my @answer=split('\;',$question->{$questionid}{'ANSWERS'});
<%=text_area 'answers'=>(rows=>5,cols=>20,class=>'formstyle')=>begin%>
%foreach my $key (@answer){
<%=$key%>
%}
<%end%>
<%=hidden_field 'questid'=>$questionid%>
    </td>
  </tr>
%}
<tr>
    <!--<td></td>-->
    <td colspan=2>
        <%=submit_button 'Сохранить вопрос'=>(class=>'formstyle')%>
    </td>
</tr>
</table><br/>
<%end%>
        </div><!--pagecard-->
    </div><!--quizform-->
</div><!--content-->